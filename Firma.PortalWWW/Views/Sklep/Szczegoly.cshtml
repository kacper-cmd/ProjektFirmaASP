<div class="container">
    <div class="section">
        <!--   Icon Section   -->
        <div class="row">
            @if (Model != null)
            {
                <div class="col s12 m6 l4">
                    <div class="card z-depth-2">
                        <div class="card-image waves-effect waves-block">

                            @if (Model != null && !string.IsNullOrEmpty(Model.FotoUrl))
                            {
                                <img alt="Product Image" class="activator responsive-img" src="@Model.FotoUrl ">

                            }
                            else
                            {
                                <img alt="Product Image" class="activator responsive-img" src="http://images.media-allrecipes.com/userphotos/720x405/1889670.jpg">
                            }

                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4 truncate">@Model.Nazwa<i class="material-icons right">more_vert</i></span>
                            <h6><b>$</b> <i>@Model.Cena</i></h6>
                        </div>
                        <div class="card-action center">
                            <a class="btn-floating btn-large waves-effect waves-light blue darken-1" href="" target="_blank"><i class="material-icons">open_in_new</i></a>
                        </div>

                        <div class="card-reveal">
                            <span class="card-title blue-text text-darken-3">Full Details<i class="material-icons right">close</i></span>
                            <div class="divider"></div>
                            <p><b>Product ID: </b> @Model.IdTowaru</p>
                            <div class="divider"></div>
                            <p><b>Fullname: </b> @Model.Nazwa</p>
                            <div class="divider"></div>
                            <p><b>Kod: </b> @Model.Kod</p>
                            <div class="divider"></div>
                            <p><b>Cena: </b> @Model.Cena</p>
                            <div class="divider"></div>
                            <p><b>Opis: </b> @Model.Opis</p>

                        </div>
                        <div>
                            <a asp-action="DodajDoKoszyka" asp-controller="Koszyk" asp-route-id="@Model.IdTowaru">Dodaj do koszyka</a>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
    <br><br>

</div>




