@model IEnumerable<Firma.Data.Data.Sklep.Towar>
@{
    ViewData["Title"] = "Sklep";
    Layout = "~/Views/Shared/_SklepLayout.cshtml";
}

<div>
    <table>
        <thead>
            <tr>
                <th>Foto</th>
                <th>Nazwa</th>
                <th>Cena</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var towar in Model)
            {
                <tr>
                    <td>
                        Foto
                    </td>
                    <td>
                        @Html.ActionLink(towar.Nazwa,"Szczegoly", "Sklep", new { id = towar.IdTowaru }, null)
                    </td>
                    <td>
                        @towar.Cena
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="container">

    @foreach (var towar in Model)
    {
        <div class="row">
            <div class="col s12 m6 l4">

                <div class="card">
                    <div class="card-image">
                        @if (!string.IsNullOrEmpty(towar.FotoUrl))
                        {
                            @* <img alt="Product Image" class="activator responsive-img" src="@Model.FotoUrl ">*@
                            <img src="@towar.FotoUrl" height="100" width="100">


                        }
                        else
                        {
                            <img src="http://images.media-allrecipes.com/userphotos/720x405/1889670.jpg" height="100" width="100">

                        }
                    </div>

                    <div class="card-content">
                        <span class="card-title">@towar.Nazwa</span>

                        <p>
                            <h6>Cena: @towar.Cena$</h6>

                        </p>
                    </div>
                    <div class="card-action">

                        @Html.ActionLink(towar.Nazwa,"Szczegoly", "Sklep", new { id = towar.IdTowaru }, null)

                    </div>
                </div>


            </div>
        </div>
    }
</div>

